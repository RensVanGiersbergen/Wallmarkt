{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Wallmarkt Gateway",
  "port": 8080,
  "cache_ttl": "3600s",
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/test",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/create",
          "host": [
            "http://product:8081"
          ],
          "method": "GET"
        }
      ],
      "output_encoding": "json"
    }
  ],
  "extra_config": {
    "telemetry/metrics": {
      "collection_time": "10s",
      "listen_address": ":8090"
    },
    "telemetry/influx": {
      "address": "http://influxdb:8086",
      "ttl": "5s",
      "buffer_size": 0,
      "username": "krakend-dev",
      "password": "pas5w0rd"
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "POST",
        "GET"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h"
    }
  },
  "output_encoding": "json"
}